h2 Authenticate
form#signin-form.panel.panel-default(role="form",ng-controller="AuthController")
  p.panel-heading Enter your authentication details
  .panel-body
    .alert.alert-danger(ng-if="error", role="alert") {{ error }}
    .input-group
      label(for="username") Username:
      input#username.form-control(type="text",ng-model="auth.username",placeholder="Enter your username")
    .input-group
      label(for="password") Password:
      input#password.form-control(type="password",ng-model="auth.password",placeholder="Enter your password")
    .input-group
      button#submit.btn.btn-default(type="submit",ng-click="authenticate(auth)") Authenticate
